<div class="font-h1 mb-4 mt-6">Comandas del dia</div>
{{#each comandas}}
<div class="lg:container mx-auto mb-2 mt-6 " >
    <div class="bg-gray-800 rounded overflow-hidden border border-gray-300 hover:shadow flex  flex-grow flex-col w-auto ">
        <div class="py-1 px-4 flex-grow flex flex-col w-full">
            <h4 class="font-h2  text-white truncate w-auto">ID: {{comandaId}}</h4>
            <div>
                <p class="font-h3 text-white mt-2">{{formaEntrega}}</p>
            </div>
    
            <div class="mt-2">
                <div class="mt-1 flex flex-col  ">
                    <p class="font-h5 text-white mt-1">Precio total: ${{precioTotal}} </p>
                    <p class="font-h5 text-green-500 mt-1">Fecha: {{fecha}} </p>
                </div>
                <div class="mt-1 flex flex-row">
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}